<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RefreshingRecipes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RefreshingRecipes"
    xmlns:views="clr-namespace:RefreshingRecipes.Views"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:RecipeCollectionView}"
        Route="Recipes" />

    <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate views:SettingsView}"
        Route="Settings" />
</Shell>
